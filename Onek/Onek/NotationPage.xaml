<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Onek.NotationPage"
             Title="Critère">
    <AbsoluteLayout Margin="15,15,15,15">
        <StackLayout IsEnabled="True" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All">
            <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
                <Button x:Name="LeftButton"
                    BackgroundColor="#2399e5"
                    TextColor="White"
                    WidthRequest="50"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnLeftButtonClickedAsync"
                    BorderRadius="90"
                    VerticalOptions="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger TargetType="Button"  Property="IsEnabled" Value="False">
                                    <Setter Property="BackgroundColor" Value="#a5a5a5"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Label  x:Name="CritereNameLabel"
                    VerticalOptions="Center"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="Small"
                    TextColor="#2399e5"
                    WidthRequest="100"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
                <Button x:Name="RightButton"
                    BackgroundColor="#2399e5"
                    TextColor="White"
                    WidthRequest="50"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnRightButtonClickedAsync"
                    BorderRadius="90"
                    VerticalOptions="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger TargetType="Button"  Property="IsEnabled" Value="False">
                                    <Setter Property="BackgroundColor" Value="#a5a5a5"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackLayout>
            <RelativeLayout HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        x:Name="relativeLayout">
                <Grid x:Name="MyGrid" Padding="0,10,0,0"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0" />
                    </Grid.ColumnDefinitions>
                    <Button Text="A" x:Name="AButton"
                                        FontAttributes="Bold"
                                        CornerRadius="90"
                                        Clicked="OnClickedDescriptor"
                                        HeightRequest="70"
                                        WidthRequest="70"
                        TextColor="White"
                        Grid.Row="1" Grid.Column="1"
                                   />
                    <Button Text="B" x:Name="BButton"
                                        FontAttributes="Bold"
                                        CornerRadius="90"
                                        Clicked="OnClickedDescriptor"
                                        HeightRequest="70"
                                        WidthRequest="70"
                        TextColor="White"
                        Grid.Row="1" Grid.Column="2"
                                   />
                    <Button Text="C" x:Name="CButton"
                                        FontAttributes="Bold"
                                        CornerRadius="90"
                                        Clicked="OnClickedDescriptor"
                                        HeightRequest="70"
                                        WidthRequest="70"
                        TextColor="White"
                        Grid.Row="1" Grid.Column="3"
                                   />
                    <Button Text="D" x:Name="DButton"
                                        FontAttributes="Bold"
                                        CornerRadius="90"
                                        Clicked="OnClickedDescriptor"
                                        HeightRequest="70"
                                        WidthRequest="70"
                        TextColor="White"
                        Grid.Row="1" Grid.Column="4"
                                   />
                    <Button Text="E" x:Name="EButton"
                                        FontAttributes="Bold"
                                        CornerRadius="90"
                                        Clicked="OnClickedDescriptor"
                                        BackgroundColor="{Binding BackgroundColor}"
                                        HeightRequest="70"
                                        WidthRequest="70"
                        TextColor="White"
                        Grid.Row="1" Grid.Column="5"
                                   />
                    <Button Text="F" x:Name="FButton"
                                        FontAttributes="Bold"
                                        CornerRadius="90"
                                        Clicked="OnClickedDescriptor"
                                        BackgroundColor="{Binding BackgroundColor}"
                                        HeightRequest="70"
                                        WidthRequest="70"
                        TextColor="White"
                        Grid.Row="1" Grid.Column="6" 
                                   />
                </Grid>
            </RelativeLayout>
            <Frame HorizontalOptions="Fill"
                WidthRequest="300"
                HeightRequest="150"
                VerticalOptions="CenterAndExpand"
                BackgroundColor="LightGray"
                OutlineColor="#2399e5">
                <ScrollView Orientation="Vertical" 
                    VerticalOptions="CenterAndExpand">
                    <StackLayout VerticalOptions="CenterAndExpand">
                        <Label  x:Name="DescriptionBox"
                        HorizontalOptions="Fill"
                        WidthRequest="300"
                        HeightRequest="150"
                        TextColor="Black"
                        FontAttributes="Bold"
                        VerticalOptions="CenterAndExpand"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"/>
                    </StackLayout>
                </ScrollView>
            </Frame>
            <Label Text="Commentaire du critère (500 caractères restants) :"
               TextColor="Gray"
               x:Name="CommentaireLabel"
               VerticalOptions="CenterAndExpand" />

            <Editor x:Name="EditorCommentaireCritere"
                BackgroundColor="White"
                TextColor="#2399e5"
                HorizontalOptions="Fill"
                WidthRequest="300"
                HeightRequest="150"
                TextChanged="OnEditorCommentaireChanged" 
                VerticalOptions="CenterAndExpand" />

            <StackLayout  VerticalOptions="CenterAndExpand"
                          HorizontalOptions="FillAndExpand"
                          Orientation="Horizontal">

                <Button x:Name="ButtonValider"
                    HorizontalOptions="FillAndExpand"
                        Text="Enregistrer"
                        BackgroundColor="#2399e5"
                        TextColor="White" 
                        Clicked="OnButtonValiderClicked"
                        IsEnabled="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger TargetType="Button"  Property="IsEnabled" Value="False">
                                    <Setter Property="BackgroundColor" Value="#a5a5a5"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!--<Button x:Name="ButtonRetour"
                    HorizontalOptions="FillAndExpand"
                        Text="Retour"
                        BackgroundColor="#2399e5"
                        TextColor="White" 
                        Clicked="OnButtonRetourClicked"/>-->
            </StackLayout>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>
