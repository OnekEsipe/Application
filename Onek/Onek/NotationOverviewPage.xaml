<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Onek.NotationOverviewPage"
             Title="Evaluation">
    <StackLayout>
        <StackLayout Orientation="Horizontal"
                     HeightRequest="100">
            <Button x:Name="LeftButton"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    WidthRequest="50"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnLeftButtonClickedAsync"
                    BorderRadius="90"
                    VerticalOptions="Center"/>
            <Label  x:Name="CandidateNameLabel"
                    VerticalOptions="Center"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="Small"
                    TextColor="DarkBlue"
                    WidthRequest="100"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
            <Button x:Name="RightButton"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    WidthRequest="50"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="OnRightButtonClickedAsync"
                    BorderRadius="90"
                    VerticalOptions="Center"/>
        </StackLayout>
        <ListView x:Name="MyListView"
                ItemsSource="{Binding Items}"
                CachingStrategy="RecycleElement"
                ItemTapped="Handle_ItemTapped"
                Margin="10, 10"
                HasUnevenRows="True"
                  >
            <ListView.Header>
                <StackLayout Orientation="Horizontal" Padding="10,5,5,10">
                    <Label Text="Critere" FontSize="Small" HorizontalOptions="CenterAndExpand" />
                    <Label Text="Note" FontSize="Small" HorizontalOptions="CenterAndExpand"/>
                    <Label Text="Commentaire" FontSize="Small" HorizontalOptions="CenterAndExpand"/>
                </StackLayout>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label x:Name="CritereText" Text="{Binding Text}" 
                                   TextColor="DarkBlue" FontSize="Small"
                                   HorizontalOptions="CenterAndExpand"
                                   VerticalOptions="Center"
                                   VerticalTextAlignment="Center"
                                   WidthRequest="150"
                                   />
                            <Button x:Name="LevelButton"
                                    Text="{Binding SelectedLevel}"
                                    Command=""
                                    BackgroundColor="DeepSkyBlue"
                                    TextColor="White"
                                    WidthRequest="50"
                                    HorizontalOptions="Center"
                                    Clicked="OnLevelButtonClicked"
                                    BorderRadius="90"
                                    />
                            <Button x:Name="ButtonCommentaireCritere"
                                    Text="Afficher le commentaire du critère"
                                    BackgroundColor="White"
                                    BorderColor="White"
                                    TextColor="Black"
                                    FontSize="Micro"
                                    HorizontalOptions="CenterAndExpand"
                                    WidthRequest="150"                                    
                                    Clicked="OnCritereCommentaireClicked"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="ButtonCommentaireGeneral"
                    Text="Afficher le commentaire géneral"
                    BackgroundColor="White"
                    BorderColor="DarkBlue"
                    TextColor="DarkBlue"
                    HorizontalOptions="Fill"
                    MinimumWidthRequest="300"
                    MinimumHeightRequest="250"
                    Clicked="OnGeneralCommentaireClicked"/>
        
        <StackLayout  VerticalOptions="CenterAndExpand"
                      HorizontalOptions="CenterAndExpand"
                      Orientation="Horizontal">

            <Button x:Name="ButtonNoter"
                    Text="Noter"
                    BackgroundColor="DarkBlue"
                    TextColor="White" 
                    Clicked="OnButtonNoterClicked"
                    IsEnabled="False"/>

            <Button x:Name="ButtonEnregister"
                    Text="Enregistrer"
                    BackgroundColor="DarkBlue"
                    TextColor="White" 
                    Clicked="OnButtonEnregistrerClicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
